.white_box
  .widget.grid
    %h4 Lenders Following Business
    %ul
      - followers.each do |follower|
        %li{class: list_classes(follower, followers)}
          = link_to image_tag('35x35.png', class: 'thumbnail'), url_for(follower), class: 'widget_picture'
          .widget_description
            = link_to follower.name, url_for(follower), class: 'widget_name'
            %p.widget_address= follower.address
          .clear
    - if @business.latest_followers.count > 3
      = link_to "See more lenders following...", followers_business_path(@business), class: 'widget_more_link'
    .clear