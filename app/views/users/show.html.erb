<p id="notice"><%= notice %></p>

<p>
  <b>Username:</b>
  <%= @user.username %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<% if !@user.profiles.blank? %>
  <% for profile in @user.profiles %>
    
    <p><%= link_to "Show Profile (" + profile.name + ")", :controller => "profiles", :action => "show", :id => profile.id %></p>
  <% end %>
<% else %>
  
<% end %>



<%= link_to 'Edit', edit_user_path(@user) %> |
