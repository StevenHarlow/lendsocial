#header
  #logo
    = link_to image_tag('layouts/logo.png', :width => 250, :height => 50, :alt => 'LendSocial - Building Community', :title => 'LendSocial - Building Community'), root_path
  #top_menu
    %ul
      %li
        = link_to 'Lend', '#', :class => 'menu_lend'
      %li
        = link_to 'Borrow', '#', :class => 'menu_borrow'
      %li
        = link_to 'My Investments', '#', :class => 'menu_investments'
      %li
        = link_to 'Community', '#', :class => 'menu_community'
  .clear
- if current_user
  #my_menu
    .my_menu_left
      %ul
        %li.first
          Hello,
          %strong= current_user.name
        %li
          = link_to 'My Panel', dashboard_index_path
        %li
          = link_to 'My Profile', edit_user_path(current_user)
        %li
          = link_to 'My Companies', '#'
    .my_menu_right
    .clear