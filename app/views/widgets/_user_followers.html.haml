.white_box
  .widget.grid
    %h4= "Lenders Following #{@user.first_name}"
    %ul
      - followers.each do |follower|
        %li{class: list_classes(follower, followers)}
          = link_to image_tag('http://placehold.it/35x35', class: 'thumbnail'), url_for(follower), class: 'widget_picture'
          .widget_description
            = link_to follower.name, url_for(follower), class: 'widget_name'
            %p.widget_address= follower.address
          .clear
    - if followers.size > 3
      = link_to "See more lender's following...", followers_user_path(@user), class: 'widget_more_link'
    .clear