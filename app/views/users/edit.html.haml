.white_box#user_edit
  %h2= "#{@user.name}'s profile editing"
  .clear
  = form_block_alerts @user
  .columns
    = form_for @user do |f|
      .column
        .small-columns
          .column
            = f.label :first_name
            = f.text_field :first_name
          .column
            = f.label :last_name
            = f.text_field :last_name
          .clear
        .small-columns
          .column
            = f.label :city
            = f.text_field :city
          .clear
        .small-columns
          .column
            = f.label :state
            = f.us_state_select :state, {}, {}, {class: 'span2'}
          .column
            = f.label :zipcode, 'ZIP Code'
            = f.text_field :zipcode, maxlength: 5, class: 'span1'
          .clear
        = f.label :about
        = f.text_area :about, class: 'span6'
      .column
        = f.label :email
        = f.text_field :email, disabled: true
        = f.label :password
        = f.password_field :password
        = f.label :password_confirmation
        = f.password_field :password_confirmation
        = f.label :user_picture
        = f.hidden_field :user_picture_cache
        = image_tag @user.user_picture_url(:thumb), class: 'thumbnail', id: 'thumbnail'
        = f.file_field :user_picture,
          :onchange => 'javascript:preview_file(this);javascript:$("#save_notice").html("Click \"Save changes\" to upload new photo");'
        #save_notice
      .clear
      = f.submit 'Save changes', class: 'btn btn-info'