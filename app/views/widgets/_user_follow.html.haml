- if current_user.is_following? @user
  = link_to unfollow_user_path(@user), remote: true, class: 'btn btn-danger', data: {id: @user.id} do
    %i.icon-remove.icon-white
    Unfollow
- else
  = link_to follow_user_path(@user), remote: true, class: 'btn btn-success', data: {id: @user.id} do
    %i.icon-eye-open.icon-white
    Follow